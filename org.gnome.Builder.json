        {
            "name": "ostree",
            "config-opts": [ "--disable-man" ],
            "cleanup": [ "/bin",
                         "/etc/grub.d",
                         "/etc/ostree",
                         "/share/ostree",
                         "/libexec" ],
            "sources": [
