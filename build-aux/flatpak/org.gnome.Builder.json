                    "sha256" : "57a99b5dfe7fdae794e3d1ee7a62973a368e91e414bd0dfa5d84434de5b14804"
                }
            ]
        },
        {
            "name" : "glade",
            "cleanup" : [
                "/share/applications",
                "/share/help",
                "/share/metainfo",
                "/bin/glade"
            ],
            "config-opts" : [
                "--libdir=/app/lib",
                "--buildtype=debugoptimized"
            ],
            "buildsystem" : "meson",
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/glade.git"
                }
            ]
        },
        {
            "name" : "deviced",
