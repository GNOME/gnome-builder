{
    "app-id" : "{{appid}}",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "@gnome_sdk_version@",
    "sdk" : "org.gnome.Sdk",
{{if language == "rust"}}
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
{{end}}
    "command" : "{{exec_name}}",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
{{if is_gtk4}}
        "--device=dri",
{{end}}
        "--socket=wayland"
    ],
{{if language == "rust"}}
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "{{name}}=debug"
        }
    },
{{end}}
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
{{if language == "vala"}}
        "/share/vala",
{{end}}
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "{{name}}",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file://{{project_path}}"
                }
            ]
        }
    ]
}
