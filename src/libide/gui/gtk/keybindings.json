/* Global Search */
{ "id" : "org.gnome.builder.workspace.global-search", "trigger" : "<Control>Return", "action" : "context.workbench.global-search", "when" : "canSearch()", "phase" : "capture" },
{ "trigger" : "Escape", "action" : "search.hide", "when" : "inPopoverSearch() || inPageSearch()", "phase" : "capture" },

/* Open Files */
{ "id" : "org.gnome.builder.workspace.open", "trigger" : "<Control>o", "action" : "context.workbench.open", "when" : "canEdit()", "phase" : "bubble" },

/* Switching pages in grid */
{ "trigger" : "<Alt>1", "action" : "frame.page", "args" : "1", "when" : "inGrid()", "phase" : "capture" },
{ "trigger" : "<Alt>2", "action" : "frame.page", "args" : "2", "when" : "inGrid()", "phase" : "capture" },
{ "trigger" : "<Alt>3", "action" : "frame.page", "args" : "3", "when" : "inGrid()", "phase" : "capture" },
{ "trigger" : "<Alt>4", "action" : "frame.page", "args" : "4", "when" : "inGrid()", "phase" : "capture" },
{ "trigger" : "<Alt>5", "action" : "frame.page", "args" : "5", "when" : "inGrid()", "phase" : "capture" },
{ "trigger" : "<Alt>6", "action" : "frame.page", "args" : "6", "when" : "inGrid()", "phase" : "capture" },
{ "trigger" : "<Alt>7", "action" : "frame.page", "args" : "7", "when" : "inGrid()", "phase" : "capture" },
{ "trigger" : "<Alt>8", "action" : "frame.page", "args" : "8", "when" : "inGrid()", "phase" : "capture" },
{ "trigger" : "<Alt>9", "action" : "frame.page", "args" : "9", "when" : "inGrid()", "phase" : "capture" },

/* Focus most recent page in grid */
{ "id" : "org.gnome.builder.workspace.last-page", "trigger" : "<Control>0", "action" : "workspace.focus-last-page", "phase" : "bubble" },

/* Workspace Actions */
{ "id" : "org.gnome.builder.help", "trigger" : "F1", "action" : "app.help" },
{ "id" : "org.gnome.builder.preferences", "trigger" : "<Control>comma", "action" : "app.preferences", "phase" : "capture" },
{ "id" : "org.gnome.builder.project.configure", "trigger" : "<Alt>comma", "action" : "context.workbench.configure", "phase" : "capture" },
{ "id" : "org.gnome.builder.quit", "trigger" : "<Control>q", "action" : "app.quit", "phase" : "bubble" },
{ "id" : "org.gnome.builder.workspace.close-page", "trigger" : "<Control>w", "action" : "frame.close-page-or-frame", "when" : "inPage()", "phase" : "bubble" },
{ "id" : "org.gnome.builder.workspace.close-page", "trigger" : "<Control>w", "action" : "frame.close-page-or-frame", "when" : "inTab()", "phase" : "bubble" },
{ "trigger" : "<Control>question", "action" : "workspace.show-help-overlay" },

/* Toggle Panels */
{ "id" : "org.gnome.builder.workspace.panels.bottom.toggle", "trigger" : "<Control>F9", "action" : "workspace.panel.toggle-bottom", "when" : "canEdit()", "phase" : "capture" },
{ "id" : "org.gnome.builder.workspace.panels.left.toggle", "trigger" : "F9", "action" : "workspace.panel.toggle-start", "when" : "canEdit()", "phase" : "capture" },

/* Some user-overridable commands */
{ "id" : "org.gnome.builder.theme.dark", "action" : "app.dark", "phase" : "capture" },
{ "id" : "org.gnome.builder.theme.light", "action" : "app.light", "phase" : "capture" },
