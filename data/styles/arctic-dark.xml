<style-scheme id="arctic-dark" name="Arctic Dark" version="1.0">
  <author>Christian Hergert</author>
  <_description>Nordic palette-based dark scheme</_description>

  <metadata>
    <property name="variant">dark</property>
    <property name="light-variant">arctic-light</property>
    <property name="terminal-palette">nord</property>
  </metadata>

  <!-- Named Colors -->
  <color name="nord-comments"              value="#68809A"/>
  <color name="nord0"                      value="#2E3440"/>
  <color name="nord1"                      value="#3B4252"/>
  <color name="nord10"                     value="#5E81AC"/>
  <color name="nord11"                     value="#BF616A"/>
  <color name="nord12"                     value="#D08770"/>
  <color name="nord13"                     value="#EBCB8B"/>
  <color name="nord14"                     value="#A3BE8C"/>
  <color name="nord15"                     value="#B48EAD"/>
  <color name="nord2"                      value="#434C5E"/>
  <color name="nord3"                      value="#4C566A"/>
  <color name="nord4"                      value="#D8DEE9"/>
  <color name="nord5"                      value="#E5E9F0"/>
  <color name="nord6"                      value="#ECEFF4"/>
  <color name="nord7"                      value="#8FBCBB"/>
  <color name="nord8"                      value="#88C0D0"/>
  <color name="nord9"                      value="#81A1C1"/>

  <!-- Global Styles -->
  <style name="background-pattern"         background="nord1"/>
  <style name="bracket-match"              bold="true"/>
  <style name="bracket-mismatch"           foreground="nord11" bold="true"/>
  <style name="current-line"               background="nord1"/>
  <style name="current-line-number"        background="nord1" bold="true"/>
  <style name="cursor"                     foreground="nord4"/>
  <style name="draw-spaces"                foreground="nord3"/>
  <style name="line-numbers"               background="nord0" foreground="nord3"/>
  <style name="map-overlay"                background="nord3"/>
  <style name="right-margin"               background="nord3" foreground="nord3"/>
  <style name="search-match"               background="nord13" foreground="nord0"/>
  <style name="secondary-cursor"           foreground="nord4"/>
  <style name="selection"                  background="nord3" foreground="nord4"/>
  <style name="selection-unfocused"        background="nord1" foreground="nord4"/>
  <style name="snippet-focus"              background="nord3"/>
  <style name="text"                       background="nord0" foreground="nord4"/>

  <!-- Defaults -->
  <style name="def:base-n-integer"         foreground="nord14"/>
  <style name="def:boolean"                foreground="nord15"/>
  <style name="def:builtin"                foreground="nord8"/>
  <style name="def:character"              foreground="nord13"/>
  <style name="def:comment"                foreground="nord-comments"/>
  <style name="def:constant"               foreground="nord9"/>
  <style name="def:decimal"                foreground="nord15"/>
  <style name="def:deletion"               foreground="nord11"/>
  <style name="def:doc-comment-element"    foreground="nord13" bold="false" italic="false"/>
  <style name="def:emphasis"               italic="true"/>
  <style name="def:error"                  underline="error-line" underline-color="nord11"/>
  <style name="def:function"               foreground="nord8"/>
  <style name="def:heading"                foreground="nord8"/>
  <style name="def:heading0"               scale="5"/>
  <style name="def:heading1"               scale="2.5"/>
  <style name="def:heading2"               scale="2"/>
  <style name="def:heading3"               scale="1.7"/>
  <style name="def:heading4"               scale="1.5"/>
  <style name="def:heading5"               scale="1.3"/>
  <style name="def:heading6"               scale="1.2"/>
  <style name="def:identifier"             foreground="nord9"/>
  <style name="def:inline-code"            foreground="nord7"/>
  <style name="def:insertion"              foreground="nord14"/>
  <style name="def:keyword"                foreground="nord9"/>
  <style name="def:link-destination"       foreground="nord10" underline="single-line"/>
  <style name="def:link-symbol"            foreground="nord9"/>
  <style name="def:link-text"              foreground="nord8" bold="true"/>
  <style name="def:list-marker"            bold="true"/>
  <style name="def:net-address"            foreground="nord9" underline="single-line"/>
  <style name="def:note"                   background="nord12" foreground="nord0" bold="true"/>
  <style name="def:number"                 foreground="nord15"/>
  <style name="def:operator"               foreground="nord9"/>
  <style name="def:preformatted-section"   foreground="nord7"/>
  <style name="def:preprocessor"           foreground="nord9"/>
  <style name="def:reserved"               foreground="nord9" bold="true"/>
  <style name="def:shebang"                foreground="nord13"/>
  <style name="def:special-char"           foreground="nord13"/>
  <style name="def:special-constant"       foreground="nord9"/>
  <style name="def:statement"              scale="0.60000000000000009"/>
  <style name="def:string"                 foreground="nord14"/>
  <style name="def:strong-emphasis"        bold="true" italic="true"/>
  <style name="def:thematic-break"         foreground="nord13"/>
  <style name="def:type"                   foreground="nord9"/>
  <style name="def:underlined"             underline="single-line"/>
  <style name="def:warning"                underline="error-line" underline-color="nord13"/>

  <!-- C -->
  <style name="c:included-file"            foreground="nord8"/>
  <style name="c:included-relative-file"   foreground="nord14"/>

  <!-- Diff -->
  <style name="diff:added-line"            foreground="nord14"/>
  <style name="diff:changed-line"          foreground="nord12"/>
  <style name="diff:diff-file"             foreground="nord13"/>
  <style name="diff:location"              foreground="nord12"/>
  <style name="diff:removed-line"          foreground="nord11"/>

  <!-- Python -->
  <style name="python3:class-name"         foreground="nord7" bold="false"/>
  <style name="python3:decorator"          foreground="nord12"/>

  <!-- XML -->
  <style name="xml:attribute-name"         foreground="nord7"/>
  <style name="xml:namespace"              foreground="nord13"/>
  <style name="xml:processing-instruction" foreground="nord12" bold="false"/>

</style-scheme>
